<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row ">
            <div class="col-6">
                <p class="text-center h1 fw-bold mb-1 mx-1 mx-md-4 mt-1">EDIT CATEGORY</p>
                <form class="mx-1 mx-md-4" action="/admin/editCategory" method="post" id="editCategoryForm1">
                    <input type="text" name="id" class="invisible" value="{{response._id}}" id="id">
                    <div class="d-flex flex-row align-items-center mb-1">
                        <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="categoryName"> Category Name</label>
                            <input type="text" id="categoryName" class="form-control" value="{{response.categoryName}}"
                                name="categoryName" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mx-4 mb-1 mb-lg-4">
                        <button type="submit" class="btn btn-primary btn-lg">Add</button>
                    </div>
                </form>
            </div>
            <div class="col-6">
                <p class="text-center h1 fw-bold mb-1 mx-1 mx-md-4 mt-1">EDIT SUB-CATEGORY</p>
                <form class="mx-1 mx-md-4" action="/admin/edit-category" method="post" id="editsubCategoryForm1">
                    <input type="text" name="id" class="invisible" value="{{response._id}}" id="id">
                    <div class="d-flex flex-row align-items-center mb-1">
                        <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="subCategoryName"> Category Name</label>
                            <input type="text" id="subCategoryName" class="form-control"
                                value="{{response.subCategoryName}}" name="subCategoryName" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mx-4 mb-1 mb-lg-4">
                        <button type="submit" class="btn btn-primary btn-lg">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        $("#editCategoryForm1").validate({
            rules: {
                categoryName: {
                    required: true,
                },

            },
            messages: {
                categoryName: {
                    required: "Please enter Category name",
                },
            }
        });
    });

    $(document).ready(function () {
        $("#editsubCategoryForm1").validate({
            rules: {
                subCategoryName: {
                    required: true,
                },

            },
            messages: {
                subCategoryName: {
                    required: "Please enter Sub-Category name",
                },
            }
        });
    });

</script>