<div class="section">
    <div class="container">
        <div class="row full-height justify-content-center">
            <div class="col-12 text-center align-self-center py-5">
                <div class="section pb-5 pt-5 pt-sm-2 text-center">
                    <label for="reg-log"></label>
                    <div class="card-3d-wrap mx-auto shadow">
                        <div class="card-3d-wrapper">
                            <div class="card-front">
                                <div class="center-wrap">
                                    <div class="section text-center">
                                        <h4 class="mb-4 pb-3" style="color: #fff;">Log In</h4>
                                        {{#with session}}
                                        {{#if wrongpassword}}
                                        <p>Invalid Credentials</p>
                                        {{/if}}

                                        {{#if adminnotfound}}
                                        <p>Invalid Credentials</p>
                                        {{/if}}
                                        {{/with}}
                                        <form action="/admin/login" method="post" id="form1">
                                            <div class="form-group">
                                                <input type="email" name="adminemail" class="form-style"
                                                    placeholder="Your Email" id="adminemail" >

                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="password" name="adminpassword" class="form-style"
                                                    placeholder="Your Password" id="adminpassword" >

                                            </div>
                                            <button type="submit" class="btn mt-4 ">submit</button>
                                        </form>


                                        <hr>
                                        <h6 class="text-white">OR</h6>
                                        {{#if session.wrongMobileNumber}}
                                        <p>Incorrect mobile number</p>
                                        {{/if}}

                                        <form action="/admin/loginwithotp" method="post" id="form2">

                                            <div class="form-group mt-2">
                                                <input type="text" name="adminnumber" class="form-style"
                                                    placeholder="Enter Your mobile number" id="adminnumber"
                                                    >

                                            </div>
                                            <button type="submit" class="btn mt-4 btn-lg">Login with OTP</button>
                                        </form>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<link href="/css/style.css" rel="stylesheet">

<link rel="stylesheet" href="/stylesheets/logincss.css">

<script>

    jQuery.validator.addMethod("lettersonly", function (value, element) {
        return this.optional(element) || /^[a-z]+$/i.test(value);
    }, "Letters only please");

    $.validator.addMethod("noCaps", function (value, element) {
        return this.optional(element) || !/[A-Z]/.test(value);
    }, "email can't have upper case letters")


    $(document).ready(function () {
        $("#form1").validate({
            rules: {
                adminemail: {
                    required: true,
                    noCaps: true,
                    email: true
                    
                },
                adminpassword: {
                    required: true,
                    minlength: 5
                }
            },
            messages: {
                adminemail: {
                    required: "This field is mandatory",
                    email: "Enter a valid Email ID",
                    noCaps: "Only lower case allowed"
                },
                adminpassword: {
                    required: "This field is mandatory",
                    minlength: "Minimum 5 charactor in Password"
                },
            }
        });
    });

</script>

