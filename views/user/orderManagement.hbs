<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">

<body>
    <div class="main-content">
        <div class="container mt-7">
            <!-- Table -->
            <div class="row">

                <div class="col">
                    <div class="card shadow">
                        <div class="card-header border-0">
                            <h3 class="mb-0 d-flex justify-content-center">ORDER HISTORY</h3>
                        </div>
                        <div class="table-responsive">
                            <table class="table align-items-center table-flush" id="orderManagement">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">PRODUCT</th>
                                        <th scope="col">QUANTITY</th>
                                        <th scope="col">TOTAL PRICE</th>
                                        <th scope="col">STATUS</th>
                                        <th scope="col">DATE OF ORDER</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each order}}
                                    {{#each this.orderItems}}
                                    <tr onclick="location.href='/orderDetails/{{../this._id}}'">
                                        <th scope="row">
                                            <div class="media align-items-center">
                                                <a href="#" class="avatar rounded-circle mr-3">
                                                    <img alt="Image placeholder"
                                                        src="/images/product-image/{{this.product._id}}1.jpg" style="width:100% ;height:5rem">
                                                </a>
                                                <div class="media-body">
                                                    <span class="mb-0 text-sm">{{this.product.title}}</span>
                                                </div>
                                            </div>
                                        </th>
                                         <td>
                                            {{this.quantity}}
                                        </td>
                                        <td>
                                            {{this.product.discountPrice}}
                                        </td>
                                        <td>
                                            <span class="badge badge-dot mr-4">
                                                <i class="bg-warning"></i> {{../this.deliveryStatus}}
                                            </span>
                                        </td>
                                        <td>
                                            {{date ../this.createdAt}}
                                        </td>
                                    </tr>
                                    {{/each}}
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<style>
    #orderManagement_paginate{
        display: flex;
        justify-content: space-evenly;
        align-items: center;
    },
    .paginate_button{
        padding-right:15px;
    }
</style>

<script>
    $(document).ready(function () {
        $('#orderManagement').DataTable();
    });
</script>