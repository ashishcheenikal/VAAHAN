<div class="container-fluid my-5  justify-content-center">
    <div class="card card-1">
        <div class="card-header bg-white">
            <div class="media flex-sm-row flex-column-reverse justify-content-between  ">
                <div class="col my-auto">
                    <h4 class="mb-0">Thanks for your Order,<span class="change-color">{{session.user.name}}</span> !
                    </h4>
                </div>
                <div class="col-auto text-center  my-auto pl-0 pt-sm-4"> <img
                        class="img-fluid my-auto align-items-center mb-0 pt-3" src="/img/orderSuccess.png" width="115"
                        height="115">
                    <p class="mb-4 pt-0 Glasses">A perfect place to spend on your VaaHan</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row justify-content-between mb-3">
                <div class="col-auto">
                    <h6 class="color-1 mb-0 change-color">Receipt</h6>
                </div>
                <div class="col-auto  "> <small>Receipt Voucher : {{order._id}}</small> </div>
            </div>
            {{#each order.orderItems}}
            <div class="row">
                <div class="col">
                    <div class="card card-2">
                        <div class="card-body">
                            <div class="media">
                                <div class="sq align-self-center "> <img
                                        class="img-fluid  my-auto align-self-center mr-2 mr-md-4 pl-0 p-0 m-0"
                                        src="/images/product-image/{{product._id}}1.jpg" width="135" height="135" />
                                </div>
                                <div class="media-body my-auto text-right">
                                    <div class="row  my-auto flex-column flex-md-row">
                                        <div class="col my-auto">
                                            <h6 class="mb-0"> {{product.title}}</h6>
                                        </div>
                                        <div class="col-auto my-auto"> <small>Brand: {{product.brand}}</small></div>
                                        <div class="col my-auto"> <small>Size : {{product.categoryName}}</small></div>
                                        <div class="col my-auto"> <small>Qty : {{quantity}}</small></div>
                                        <div class="col my-auto">
                                            <h6 class="mb-0">Rs.{{product.discountPrice}}</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr class="my-3 ">
                            <div class="row">
                                <div class="col-md-3 mb-3"> <small> Track Order <span><i class=" ml-2 fa fa-refresh"
                                                aria-hidden="true"></i></span></small> </div>
                                <div class="col mt-auto">
                                    <div class="progress my-auto">
                                        <div class="progress-bar progress-bar  rounded" style="width: 15%"
                                            role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                        </div>
                                    </div>
                                    <div class="media row justify-content-between ">
                                        <div class="col-auto text-right"><span> <small
                                                    class="text-right mr-sm-2">processing</small> <i
                                                    class="fa fa-circle active"></i> </span></div>
                                        <div class="col-auto text-right"><span> <small
                                                    class="text-right mr-sm-2">shipped</small> <i
                                                    class="fa fa-circle active"></i> </span></div>
                                        <div class="flex-col"> <span> <small class="text-right mr-sm-2">Out for
                                                    Delivery</small><i class="fa fa-circle active"></i></span></div>
                                        <div class="col-auto flex-col-auto"><small
                                                class="text-right mr-sm-2">Delivered</small><span> <i
                                                    class="fa fa-circle"></i></span></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
            <div class="row mt-4">
                <div class="col">
                    <div class="row justify-content-between">
                        <div class="col-auto">
                            <p class="mb-1 text-dark"><b>
                                    <h4>Delivery Address</h4>
                                </b></p>
                        </div>
                    </div>
                    <div class="flex-sm-col col d-flex">
                        <p class="mb-1"><b>Name :</b></p>
                        <div class="flex-sm-col col-auto">
                            <p class="mb-1">{{order.deliveryDetails.name}}</p>
                        </div>
                    </div>
                    <div class="flex-sm-col col d-flex">
                        <p class="mb-1"><b>Address Line 1 :</b></p>
                        <div class="flex-sm-col col-auto">
                            <p class="mb-1">{{order.deliveryDetails.address1}}</p>
                        </div>
                    </div>
                    <div class="flex-sm-col col d-flex">
                        <p class="mb-1"><b>Address Line 2 :</b></p>
                        <div class="flex-sm-col col-auto">
                            <p class="mb-1">{{order.deliveryDetails.address2}}</p>
                        </div>
                    </div>
                    <div class="flex-sm-col col d-flex">
                        <p class="mb-1"><b>District :</b></p>
                        <div class="flex-sm-col col-auto">
                            <p class="mb-1">{{order.deliveryDetails.district}}</p>
                        </div>
                    </div>
                    <div class="flex-sm-col col d-flex">
                        <p class="mb-1"><b>State :</b></p>
                        <div class="flex-sm-col col-auto">
                            <p class="mb-1">{{order.deliveryDetails.state}}</p>
                        </div>
                    </div>
                    <div class="flex-sm-col col d-flex">
                        <p class="mb-1"><b>Country :</b></p>
                        <div class="flex-sm-col col-auto">
                            <p class="mb-1">{{order.deliveryDetails.country}}</p>
                        </div>
                    </div>
                    <div class="flex-sm-col col d-flex">
                        <p class="mb-1"><b>Pin Code :</b></p>
                        <div class="flex-sm-col col-auto">
                            <p class="mb-1">{{order.deliveryDetails.pinCode}}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row invoice ">
                <button class="btn btn-primary" onclick="downloadInvoice({{json order}})">Download Invoice</button>
            </div>
        </div>
    </div>
</div>



